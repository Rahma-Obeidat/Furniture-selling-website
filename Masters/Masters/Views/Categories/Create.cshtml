@model Masters.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label" style="color:#222E3C ; font-weight:bold">Category Name </label><br /><br />
                <input asp-for="CategoryName" class="form-control" /><br />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label" style="color:#222E3C ; font-weight:bold">Category Image</label><br /><br />
                <input asp-for="ImagePath" class="form-control" type="file" name="image" /><br />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" @*class="btn btn-primary"*@ style="background-color:#222E3C ; color:white ; padding:8px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
