@model Masters.Models.CategoryStore

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}

<h1>Create</h1>

<h4>Category and Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CatId" class="control-label" style="color:#222E3C ; font-weight:bold">Category</label><br /><br />
                <select asp-for="CatId" class ="form-control" asp-items="ViewBag.CatId"></select>
            </div><br />
            <div class="form-group">
                <label asp-for="StoreId" class="control-label" style="color:#222E3C ; font-weight:bold">Stroe</label><br /><br />
                <select asp-for="StoreId" class ="form-control" asp-items="ViewBag.StoreId"></select>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" @*class="btn btn-primary"*@ style="background-color:#222E3C ; color:white ; padding:8px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
