@model Masters.Models.Store

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}

<h1>Create</h1>

<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreName" class="control-label" style="color:#222E3C ; font-weight:bold"> Store Name</label><br /><br />
                <input asp-for="StoreName" class="form-control" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div><br />

              <div class="form-group">
                <label asp-for="StatusPublish" class="control-label" style="color:#222E3C ; font-weight:bold">Status Of Store</label><br /><br />
                <input asp-for="StatusPublish" class="form-control" />
                <span asp-validation-for="StatusPublish" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label" style="color:#222E3C ; font-weight:bold"> Store Image</label><br /><br />
                <input asp-for="ImagePath" class="form-control" type="file" name="image" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div><br />
          <br />
            <div class="form-group">
                <input type="submit" value="Create" @*class="btn btn-primary"*@ style="background-color:#222E3C ; color:white ; padding:8px"  /><br /><br />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
